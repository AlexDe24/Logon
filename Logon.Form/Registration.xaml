<Window x:Class="Logon.Form.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logon.Form"
        mc:Ignorable="d"
        Title="Registration" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="2" Grid.Row="0" Name="ProfileImage"/>
        <StackPanel  Grid.Column="0" Grid.RowSpan="2" Name="ProfilePanelLabel">
            <Label Content="Имя:" Height="25"/>
            <Label Content="Фамилия:" Height="25"/>
            <Label Content="Отчество:" Height="25"/>
            <Label Content="Дата рождения:" Height="25"/>
        </StackPanel>
        <StackPanel  Grid.Column="1" Grid.RowSpan="2" Name="ProfilePanel">
            <TextBox Height="25" Name="Name"/>
            <TextBox Height="25" Name="Surname"/>
            <TextBox Height="25" Name="Middlename"/>
            <TextBox Height="25" Name="birthday"/>
        </StackPanel>
    </Grid>
</Window>
